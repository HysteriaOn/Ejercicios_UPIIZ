#include <iostream>

using namespace std;

int main(){
    long long n,residuo,division;

    cin >> n;

    residuo=n%2;
    division=n/2;

    if(residuo==0){
        cout << division << endl;
    }
    if(residuo!=0){
        division=(n+1)/2;
        cout <<  division*-1 << endl;
    }

    return 0;
}
