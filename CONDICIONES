        c= b+3470.25;
        cout << c;
        }


         else if(sueldo==19188.62){
            cout << "5005.35";
        }
        else if((sueldo>19188.62)&&(sueldo<=57565.76)){

        a = sueldo-19188.62;
        b = (a*34)/100;
        c= b+5005.35;
        cout << c;
        }



         else if((sueldo>57565.76)&&(sueldo<57565.78)){
