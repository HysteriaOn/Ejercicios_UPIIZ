        a = sueldo-1703.81;
        b = (a*16)/100;
        c= b+136.85;
        cout << c;
        }


         else if(sueldo==4782.62){
            cout << "766.15" ;
       }
        else if((sueldo>4782.62)&&(sueldo<=14391.44)){

        a = sueldo-4782.62;
        b = (a*23.52)/100;
        c= b+766.15;
        cout << c;
        }


         else if(sueldo==14391.45){
            cout << "3470.25";
       }
        else if((sueldo>14391.45)&&(sueldo<=19188.61)){

        a = sueldo-14391.45;
