#include <iostream>
#include <stdio.h>
#include <stdlib.h>

using namespace std;

int main()
{
    float sueldo,a,b,c;

    cin >> sueldo;


        if(sueldo<=0.01){
                cout << "0";
        }
        else if((sueldo>0.01)&&(sueldo<=969.5)){

        a = sueldo-0.01;
        b = (a*1.92)/100;
        cout << b;
       }


       else if(sueldo==969.51){
            cout << "56.91";

       }
        else if((sueldo>969.51)&&(sueldo<=1703.80)){

        a = sueldo-969.51;
        b = (a*10.88)/100;
        c= b+56.91;
        cout << c;
        }


         else if(sueldo==1703.81){
             cout << "136.85";

       }
