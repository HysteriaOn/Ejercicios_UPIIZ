#include <iostream>

using namespace std;

int main()
{    long long n;
     long long sum1=0;
     long long sum2=0;
     long long i=1;
     long long q=1;

    cin >> n;
        while(i<=n)
        {
            if(i%2 != 0){
                sum1=sum1 + i;
            }
            i++;

            if(q%2==0){
                sum2=sum2 + q;
            }
            q++;
        }
                cout << sum2-sum1 << endl;

    return 0;
}
