#include <iostream>

using namespace std;

int main()
{
    int n;
    cin >>n;
    int aux=n-1;
    for(int j=1;j<=n;j++){
    for(int i=aux;i>0;i--){
    cout <<" ";
    }
    for(int k=2;k<n+2;k++){
        cout<<"#";
        if(k>j){
            break;
        }
    }
    cout<<endl;
    aux--;
    }

    return 0;
}
